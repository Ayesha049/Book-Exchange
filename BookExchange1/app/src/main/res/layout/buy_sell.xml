<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_account_circle_black_48dp"

            />


        <ImageView
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:src="@drawable/ic_exit_to_app_black_48dp"

            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="2">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME!"
            android:textColor="@color/category_numbers"
            android:paddingBottom="100dp"
            android:textSize="36sp"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select what you want."
            android:textColor="@color/category_numbers"
            android:paddingTop="16dp"
            android:textSize="24sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="2">
        <Button
            android:id="@+id/buy_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buy books"
            android:padding="24dp"/>
        <Button
            android:id="@+id/sell_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sell books"
            android:padding="24dp"/>


    </LinearLayout>

</LinearLayout>